[sub_resource type="GDScript" id=1]
script/source = "extends Panel

# class member variables go here, for example:
# var a = 2
# var b = \"textvar\"
export(int) var timePassed = 0;
var isRunning = true;
var clock = null;

func _ready():
	clock = self.get_node(\"ClockDisplay\")
	self.set_process(true)

func _process(delta):
	if(isRunning):
		timePassed += delta;
		if(int(timePassed)*10 == int(timePassed*10)):
			self.update()

func _draw():
	
	var intTimePassed = int( timePassed );
	if(clock):
		var text = str(\"\" if (intTimePassed/60 >= 10) else \"0\" ) + str(int(intTimePassed/60)) +  \":\" + str(\"\" if (intTimePassed % 60 >= 10) else \"0\"  ) + str(intTimePassed%60);
		clock.set_text( text );

#----------------------------------------------

func pause():
	isRunning = false
	
func resume():
	isRunning = true

func reset():
	timePassed = 0;
	isRunning = true;
	self.update()"

