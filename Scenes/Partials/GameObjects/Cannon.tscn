export(bool) var shooting setget _set_shooting, _get_shooting; 
export(float) var angle setget _set_angle, _get_angle; 


func _set_shooting(value):
	var ballSource = self.get_node(\"Berral/BallSource\");
	var explosion = self.get_node(\"Berral/Explosion\");
	if(ballSource): 
		ballSource.set_emitting( value );
		explosion.set_emitting( value );
	shooting = value;
	update();

func _get_shooting():
	return shooting;

func _set_angle(value):
	var berral = self.get_node(\"Berral\");
	if(berral):
		berral.rotate( deg2rad(value) );
	angle = value;
	update()
	
func _get_angle():
	return angle;

